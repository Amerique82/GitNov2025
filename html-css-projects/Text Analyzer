    <script>
        function analyzeText() {
            const text = document.getElementById('textInput').value;
            
            if (!text.trim()) {
                alert('Please enter some text to analyze!');
                return;
            }

            // Extract words
            const words = text.toLowerCase().match(/\b[a-z]+\b/g) || [];
            
            // Calculate statistics
            const totalWords = words.length;
            const uniqueWords = new Set(words).size;
            const totalChars = text.replace(/\s/g, '').length;
            const sentences = text.split(/[.!?]+/).filter(s => s.trim()).length;
            const avgLength = words.reduce((sum, word) => sum + word.length, 0) / totalWords;
            
            // Word frequency
            const wordFreq = {};
            words.forEach(word => {
                wordFreq[word] = (wordFreq[word] || 0) + 1;
            });
            
            const commonWords = Object.entries(wordFreq)
                .sort((a, b) => b[1] - a[1])
                .slice(0, 10);
            
            // Longest words
            const longestWords = [...new Set(words)]
                .sort((a, b) => b.length - a.length)
                .slice(0, 5);

            // Display results
            displayResults({
                totalWords,
                uniqueWords,
                totalChars,
                sentences,
                avgLength: avgLength.toFixed(2),
                commonWords,
                longestWords
            });
        }

        function displayResults(data) {
            const resultsDiv = document.getElementById('results');
            resultsDiv.classList.add('show');

            // Stats grid
            document.getElementById('statsGrid').innerHTML = `
                <div class="stat-box">
                    <div class="stat-number">${data.totalWords}</div>
                    <div class="stat-label">Total Words</div>
                </div>
                <div class="stat-box">
                    <div class="stat-number">${data.uniqueWords}</div>
                    <div class="stat-label">Unique Words</div>
                </div>
                <div class="stat-box">
                    <div class="stat-number">${data.totalChars}</div>
                    <div class="stat-label">Characters</div>
                </div>
                <div class="stat-box">
                    <div class="stat-number">${data.avgLength}</div>
                    <div class="stat-label">Avg Word Length</div>
                </div>
            `;

            // Common words
            document.getElementById('commonWords').innerHTML = `
                <h3>üî• Most Common Words</h3>
                ${data.commonWords.map(([word, count]) => 
                    `<span class="word-item">${word}<span class="word-count">${count}√ó</span></span>`
                ).join('')}
            `;

            // Longest words
            document.getElementById('longestWords').innerHTML = `
                <h3>üìè Longest Words</h3>
                ${data.longestWords.map(word => 
                    `<span class="word-item">${word}<span class="word-count">${word.length} letters</span></span>`
                ).join('')}
            `;
        }
    </script>
